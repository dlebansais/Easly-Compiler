<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <Platforms>x64</Platforms>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <Authors>David Le Bansais</Authors>
    <Product />
    <Description>Constant Computation</Description>
    <Copyright>Copyright © 2019 David Le Bansais</Copyright>
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.3415</AssemblyVersion>
    <FileVersion>1.0.0.10</FileVersion>
    <RepositoryUrl>https://github.com/dlebansais/Easly-Compiler</RepositoryUrl>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Easly-Language-Debug" Version="1.0.3" Condition="'$(Configuration)|$(Platform)'=='Debug|x64'" />
    <PackageReference Include="Easly-Language" Version="1.0.3" Condition="'$(Configuration)|$(Platform)'!='Debug|x64'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CSharpProject\CSharpProject.csproj" />
  </ItemGroup>

  <Target Name="_ResolveCopyLocalNuGetPackagePdbsAndXml" Condition="$(CopyLocalLockFileAssemblies) == true" AfterTargets="ResolveReferences">
    <ItemGroup>
      <ReferenceCopyLocalPaths Include="@(ReferenceCopyLocalPaths->'%(RootDir)%(Directory)%(Filename).pdb')" Condition="'%(ReferenceCopyLocalPaths.NuGetPackageId)' != ''&#xD;&#xA;                    and Exists('%(RootDir)%(Directory)%(Filename).pdb')" />
      <ReferenceCopyLocalPaths Include="@(ReferenceCopyLocalPaths->'%(RootDir)%(Directory)%(Filename).xml')" Condition="'%(ReferenceCopyLocalPaths.NuGetPackageId)' != ''&#xD;&#xA;                    and Exists('%(RootDir)%(Directory)%(Filename).xml')" />
    </ItemGroup>
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if not exist $(SolutionDir)\Test\bin\ mkdir $(SolutionDir)\Test\bin" />
    <Exec Command="if not exist $(SolutionDir)\Test\bin\$(Platform)\ mkdir $(SolutionDir)\Test\bin\$(Platform)" />
    <Exec Command="if not exist $(SolutionDir)\Test\bin\$(Platform)\$(Configuration)\ mkdir $(SolutionDir)\Test\bin\$(Platform)\$(Configuration)" />
    <Exec Command="copy $(TargetPath) $(SolutionDir)\Test\bin\$(Platform)\$(Configuration)\$(TargetFileName)" />
    <Exec Command="if not exist $(SolutionDir)\Easly-Compiler\bin\ mkdir $(SolutionDir)\Easly-Compiler\bin" />
    <Exec Command="if not exist $(SolutionDir)\Easly-Compiler\bin\$(Platform)\ mkdir $(SolutionDir)\Easly-Compiler\bin\$(Platform)" />
    <Exec Command="if not exist $(SolutionDir)\Easly-Compiler\bin\$(Platform)\$(Configuration)\ mkdir $(SolutionDir)\Easly-Compiler\bin\$(Platform)\$(Configuration)" />
    <Exec Command="copy $(TargetPath) $(SolutionDir)\Easly-Compiler\bin\$(Platform)\$(Configuration)\$(TargetFileName)" />
  </Target>

</Project>
